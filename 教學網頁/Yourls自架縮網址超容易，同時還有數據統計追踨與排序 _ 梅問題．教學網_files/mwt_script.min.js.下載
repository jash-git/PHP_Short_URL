$(function(){var $searchform=$('form'),$csetext=$searchform.find('.csetext');$csetext.focus(function(){$csetext.addClass('focus');}).blur(function(){if(!!!$csetext.val())$csetext.removeClass('focus');});$('.select_menu').each(function(){var $this=$(this),$subMenu=$this.find("> ul li ul");$this.find(".option_selected").click(function(){var $selected=$(this),$nowSelected=$('.selected');$nowSelected.removeClass('selected').parents('.select_menu').find('ul li ul').hide();if($selected[0]!=$nowSelected[0])$subMenu.toggle($selected.toggleClass('selected').hasClass('selected'));return false;});$this.find(".option_list ul li a").click(function(){var current=$(this),menuname=current.text();if(current.attr("href")=="searchCont0"){$(".searchCont0").css('display','block');$(".searchCont1").css('display','none');}else if(current.attr("href")=="searchCont1"){$(".searchCont0").css('display','none');$(".searchCont1").css('display','block');}else{location.href=current.attr("href");}
$this.find('.selected').removeClass('selected').end().find(".option_list .option_selected").html(menuname+"<i class='fa fa-angle-double-right'></i>");$subMenu.hide();return false;}).hover(function(){$this.find('.hovered_item').removeClass('hovered_item');$(this).addClass('hovered_item');});}).click(function(){$('.selected').removeClass('selected').parents('.select_menu').find('ul li ul').hide();});$("a").focus(function(){$(this).blur();});});$(window).on('load',function(){if($(window).width()>992){setTimeout(function(){var $win=$(window),$banner=$('#fix_banner'),_bannerHeight=$banner.outerHeight(true),$content=$('#content'),_contentOffset=$content.offset(),_contentHeight=$content.outerHeight(true),$slider=$('#sidebar'),_sliderOffset=$slider.offset(),_sliderHeight=$slider.outerHeight(true),$slider_top=$('#sidebar-top'),_slider_topOffset=$slider_top.offset(),_slider_topHeight=$slider_top.outerHeight(true);if(_contentHeight>_sliderHeight){$('#sidebar').css('height',_contentHeight-40);}
$win.bind('scroll resize',function(){_contentHeight=$content.outerHeight(true);var _scrollTop=$win.scrollTop();if(_scrollTop>=_slider_topHeight+150){if(_scrollTop+_bannerHeight<_contentOffset.top+_contentHeight-40){$banner.css({position:'fixed',top:20,width:'360px'});}else{$banner.css({'position':'relative','top':$content.height()-(_sliderHeight+5)});}}else if(_scrollTop<=_slider_topHeight+150){$banner.css({'position':'relative','top':0});}}).scroll();},1000);}});$(function(){$('#content a').live("click",function(){var geturl=$(this).attr("href");geturl=geturl.replace(" ","");var safe=0;var safe_url=["localhost","goo","thetwo","127.0.0.1","google","yahoo","boo2k","minwt","immi","inplus","facebook","apple","mobile=off","mobile=on","datacolor","senseart","minwt.com"];searchStringInArray(geturl,safe_url);function searchStringInArray(str,strArray){for(var j=0;j<strArray.length;j++){if(j!=strArray.length-1){if(str.indexOf(strArray[j])>0){safe++;}}else{if(safe>0){if(geturl.indexOf("www.minwt.com")>1){location.href=geturl;}else{window.open(geturl,'_blank');}}else{window.open(geturl,'_blank');}}}}
return false;});});$(function(){$("#menubtn").toggle(function(){$("#catnav").show();},function(){$("#catnav").hide();return false;});});